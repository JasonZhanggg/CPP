#ifndef ROOM_H
#define ROOM_H

#include <iostream>
#include <cstring>
#include <vector>
#include <map>
#include "Item.h"
using namespace std;
class Room
{
 public:
  Room(vector<Item*>*, char*, char*);
  vector<Item*>* getItems();
  char* getDescription();
  char* getName();
  void removeItem(Item*);
  void addItem(Item*);
  map<char*, Room*>* getExits();
 private:
  vector<Item*>* items;
  char* description;
  map<char*, Room*>* exits;
  char* name;
};
#endif
